extends ../main

block title
  | #{title}

block content
  if notes.length
    table.notes
      tr
        th.note
          | Note
          a.sort_arrow(href='/express/pads/#{pad.id}/?order=-name')  ↑
          a.sort_arrow(href='/express/pads/#{pad.id}/?order=name') ↓
        th.date
          | Last modified
          a.sort_arrow(href='/express/pads/#{pad.id}/?order=-updated_at')  ↑
          a.sort_arrow(href='/express/pads/#{pad.id}/?order=updated_at') ↓
      each note in notes
        tr
          td
            a(href='/express/notes/#{note.id}') #{note.name}
          td.hidden-text.date #{note.updatedAt()}
  else
    p.empty Create your first note in the pad
  a.button(href='/express/notes/create?pad=#{pad.id}') New note
  | &nbsp;
  a(href="/express/pads/#{pad.id}/edit") Pad settings
